generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  fistName  String?
  lastName  String?
  email     String    @unique
  hash      String
  role      UserRoles @default(CLIENT)
  orders    Order[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("users")
}

model Product {
  id                 String      @id @default(uuid())
  title              String
  titleImage         String
  Images             String
  description        String?
  stock              Int         @default(0)
  price              Float
  discountPercentage Int         @default(0)
  categories         Category[]
  orders             Order[]
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt
  OrderItem          OrderItem[]

  @@map("products")
}

model Category {
  id        String    @id @default(uuid())
  name      String    @unique
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("categorys")
}

model OrderItem {
  id         String   @id @default(uuid())
  orderId    String
  order      Order    @relation(fields: [orderId], references: [id])
  productId  String
  product    Product  @relation(fields: [productId], references: [id])
  amount     Int      @default(1)
  totalPrice Decimal
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("orders")
}

model Order {
  id         String      @id @default(uuid())
  userId     String?     @unique
  user       User?       @relation(fields: [userId], references: [id])
  items      OrderItem[]
  totalPrice Decimal
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  Product    Product?    @relation(fields: [productId], references: [id])
  productId  String?

  @@map("cards")
}

enum UserRoles {
  CLIENT
  ADMIN
}
